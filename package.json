  "description": "A beautiful loading progress bar plugin for VitePress that integrates seamlessly with VitePress themes",
  "author": "camera-2018",
  "license": "MIT",
  "homepage": "https://github.com/camera-2018/vitepress-plugin-bprogress#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camera-2018/vitepress-plugin-bprogress.git"
  },
  "bugs": {
    "url": "https://github.com/camera-2018/vitepress-plugin-bprogress/issues"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.js",
